{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ car.description }}</td>
            </tr>
            <tr>
                <th>Horses</th>
                <td>{{ car.horses }}</td>
            </tr>
            <tr>
                <th>LVt</th>
                <td>{{ car.lVt }}</td>
            </tr>
            <tr>
                <th>DateProduction</th>
                <td>{{ car.dateProduction ? car.dateProduction|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateTimeProduction</th>
                <td>{{ car.dateTimeProduction ? car.dateTimeProduction|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="data:image/jpeg;base64, {{ car.image }}" width="150" height="200" alt="Book cover"/></td>
            </tr>
            <tr>
                <th>Documentation</th>
                <td>{{ car.documentation }}</td>
            </tr>
            <tr>
                <th>Simple</th>
                <td>{{ car.simple }}</td>
            </tr>
            <tr>
                <th>Tree</th>
                <td>{{ car.tree }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}">back to list</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
